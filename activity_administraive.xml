<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdministraiveActivity">

    <TextView
        android:id="@+id/hello"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/google_blue"
        android:fontFamily="@font/averia_libre_bold"
        android:paddingLeft="50dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="Hello!"
        android:textSize="25dp"></TextView>

    <ImageView
        android:layout_width="48dp"
        android:layout_height="50dp"
        android:src="@drawable/person"
        android:id="@+id/person"></ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Administrative"
        android:fontFamily="@font/averia_libre_bold"
        android:textSize="30dp"
        android:layout_below="@+id/person"
        android:layout_marginTop="80dp"
        android:id="@+id/admin"
        android:layout_centerHorizontal="true"></TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textColor="@color/red"
        android:fontFamily="@font/averia_libre_bold"
        android:layout_below="@+id/admin"
        android:layout_marginLeft="271dp"
        android:id="@+id/login_text"></TextView>

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/admin"
        android:hint="Key ID"
        android:id="@+id/key_id"
        android:inputType="number"
        android:background="@drawable/border"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"></EditText>

<EditText
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:layout_below="@+id/key_id"
    android:scrollHorizontally="true"
    android:hint="User ID"
    android:background="@drawable/border"
    android:id="@+id/userid"
    android:inputType="number"
    android:layout_marginTop="10dp"
    android:layout_centerHorizontal="true"></EditText>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userid"
        android:layout_marginTop="25dp"
        android:textColor="@color/white"
        android:fontFamily="@font/averia_libre"
        android:layout_centerHorizontal="true"
        android:background="@drawable/round_button"
        android:id="@+id/add"
        android:text="Add User+"></Button>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="320dp"
        android:background="@color/google_blue"
        android:fontFamily="@font/averia_libre"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textSize="15dp"
        android:id="@+id/logout"
        android:text="LOGOUT"></Button>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/round_button"
        android:fontFamily="@font/averia_libre"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_below="@+id/add"
        android:textSize="15dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        android:id="@+id/All_Users"
        android:text="All Users"></Button>
</RelativeLayout>